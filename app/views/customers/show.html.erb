<% provide(:title, @customer.name) %>
<div class = "row">
  <aside class = "col-md-4">
    <section class = "user_info">
      <h1>
      <%= gravatar_for @customer %>
      <%= @customer.name %>
      </h1>
      <% if current_user.admin || current_user?(@customer) %>
        <p><%= @customer.mobile_number %></p>
      <% end %>
    </section>
  </aside>
</div>